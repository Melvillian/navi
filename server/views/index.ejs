<!DOCTYPE html>
<script src="https://unpkg.com/htmx.org@2.0.4"></script>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/a/css/style.css" />
  </head>
  <body class="container">
    <main class="row">
      <div class="col">
        <h1>A nifty starter kit</h1>
        <p>
          <strong>Browser time:</strong>
          <span id="currentTime">â€¦</span>
        </p>
        <p hx-ext="current-time" data-target="#currentTime">
          <%- include('partials/serverTime') %>
        </p>
        <p>
          <button
            id="updateTimeBtn"
            class="button primary"
            hx-get="/api/server-time"
            hx-target="previous p"
          >
            Update server timessss
          </button>
        </p>
        <p>
          <button
            id="fetchBlocksBtn"
            class="button primary"
            hx-get="/api/fetch-blocks"
            hx-target="#blocksContainer"
          >
            Fetch blocks
          </button>
        </p>
        <div id="blocksContainer">
          <% if (typeof blocks !== 'undefined' && blocks.length > 0) { %>
            <% blocks.forEach(function(block) { %>
              <div class="block">
                <% if (typeof block === 'string') { %>
                  <%= block %>
                <% } else { %>
                  <pre><%= JSON.stringify(block, null, 2) %></pre>
                <% } %>
              </div>
            <% }); %>
          <% } else { %>
            <p>Blocks will appear here</p>
          <% } %>
        </div>
      </div>
    </main>

    <script src="/a/vendor/htmx.min.js"></script>
    <script type="module" src="/a/js/app.js"></script>
  </body>
</html>
